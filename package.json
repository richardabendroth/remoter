{
  "name": "remoter",
  "version": "0.0.6",
  "description": "Remotely resolveable Native Javascript Promise that exposes it's resolver and rejector callbacks",
  "main": "Remoter.js",
  "scripts": {
    "test": "node node_modules/mocha/bin/mocha --colors -w -R spec ./*.spec.js",
    "coverage": "run-script-os",
    "coverage:windows": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha ./*.spec.js",
    "coverage:default": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha ./*.spec.js -- --require babel-register",
    "mon": "nodemon"
  },
  "keywords": [
    "Remoter",
    "remote",
    "resolve",
    "Callback",
    "callbackify",
    "de-promisify",
    "inverted",
    "Promise", 
    "Deferred", 
    "defer", 
    "EventEmitter", 
    "Await Event", 
    "Cancel Promise", 
    "Sleep", 
    "ES6", 
    "Bluebird"
  ],
  "author": "Richard Abendroth",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "run-script-os": "^1.0.7",
    "sinon": "^7.4.1"
  }
}
